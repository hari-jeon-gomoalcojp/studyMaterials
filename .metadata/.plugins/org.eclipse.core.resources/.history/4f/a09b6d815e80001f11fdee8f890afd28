// inline - 小さなメソッドや変数を呼び出す部分をメソッドや変数として定義せず、直接その内容に置き換えること

public class Calculator {
	// value
    public void printResult(String msg, int value) {
        String result = msg + " " + value;  // 
        System.out.println("result: " + result);
    }
	
   // function
	public int add(int a, int b) {
        return a + b;
    }

    public void calculate() {
        int result = add(5, 10);  //
        System.out.println("Result: " + result);
    }
}
