package old;
public class Person {
    private String name;
    private int age;
    private String address;  // 나중에 필드를 리팩토링할 예정

    
    public static void main(String[] args) {
        Person person = new Person("Alice", 30, "123 Street, City");
        person.printPersonInfo();
        person.updateAge(31);
        System.out.println("Updated Age: " + person.getAge());
    }

	public static String getAddress(Person person) {
		return person.getAddress();
	}
}